<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
  <!-- ESP32 Board -->
  <rect x="350" y="250" width="100" height="180" fill="#1a1a1a" rx="5" ry="5"/>
  <text x="400" y="340" font-family="Arial" font-size="12" text-anchor="middle" fill="white">ESP32</text>
  
  <!-- ESP32 Pins -->
  <!-- Left side pins -->
  <text x="335" y="260" font-family="Arial" font-size="8" text-anchor="end" fill="white">3V3</text>
  <text x="335" y="275" font-family="Arial" font-size="8" text-anchor="end" fill="white">GND</text>
  <text x="335" y="290" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO15</text>
  <text x="335" y="305" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO2</text>
  <text x="335" y="320" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO4</text>
  <text x="335" y="335" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO5</text>
  <text x="335" y="350" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO19</text>
  <text x="335" y="365" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO21</text>
  <text x="335" y="380" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO36</text>
  <text x="335" y="395" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO39</text>
  <text x="335" y="410" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO34</text>
  <text x="335" y="425" font-family="Arial" font-size="8" text-anchor="end" fill="white">GPIO35</text>
  
  <!-- Right side pins -->
  <text x="465" y="260" font-family="Arial" font-size="8" text-anchor="start" fill="white">5V</text>
  <text x="465" y="275" font-family="Arial" font-size="8" text-anchor="start" fill="white">GND</text>
  <text x="465" y="290" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO13</text>
  <text x="465" y="305" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO12</text>
  <text x="465" y="320" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO14</text>
  <text x="465" y="335" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO27</text>
  <text x="465" y="350" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO26</text>
  <text x="465" y="365" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO25</text>
  <text x="465" y="380" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO33</text>
  <text x="465" y="395" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO32</text>
  <text x="465" y="410" font-family="Arial" font-size="8" text-anchor="start" fill="white">GPIO22</text>
  
  <!-- 4x4 Matrix Keypad -->
  <rect x="600" y="280" width="100" height="100" fill="#dddddd" stroke="#333333" stroke-width="2"/>
  <text x="650" y="330" font-family="Arial" font-size="12" text-anchor="middle" fill="black">4x4 Keypad</text>
  
  <!-- Keypad connections -->
  <line x1="450" y1="395" x2="600" y2="300" stroke="#ff0000" stroke-width="2"/> <!-- GPIO32 to Row1 -->
  <line x1="450" y1="380" x2="600" y2="320" stroke="#ff7700" stroke-width="2"/> <!-- GPIO33 to Row2 -->
  <line x1="450" y1="365" x2="600" y2="340" stroke="#ffff00" stroke-width="2"/> <!-- GPIO25 to Row3 -->
  <line x1="450" y1="350" x2="600" y2="360" stroke="#00ff00" stroke-width="2"/> <!-- GPIO26 to Row4 -->
  <line x1="450" y1="335" x2="600" y2="280" stroke="#0000ff" stroke-width="2"/> <!-- GPIO27 to Col1 -->
  <line x1="450" y1="320" x2="600" y2="290" stroke="#4b0082" stroke-width="2"/> <!-- GPIO14 to Col2 -->
  <line x1="450" y1="305" x2="600" y2="310" stroke="#8b00ff" stroke-width="2"/> <!-- GPIO12 to Col3 -->
  <line x1="450" y1="290" x2="600" y2="330" stroke="#ff00ff" stroke-width="2"/> <!-- GPIO13 to Col4 -->
  
  <!-- Labels for keypad connections -->
  <text x="520" y="300" font-family="Arial" font-size="8" fill="#ff0000">GPIO32-Row1</text>
  <text x="520" y="320" font-family="Arial" font-size="8" fill="#ff7700">GPIO33-Row2</text>
  <text x="520" y="340" font-family="Arial" font-size="8" fill="#ffff00">GPIO25-Row3</text>
  <text x="520" y="360" font-family="Arial" font-size="8" fill="#00ff00">GPIO26-Row4</text>
  <text x="520" y="280" font-family="Arial" font-size="8" fill="#0000ff">GPIO27-Col1</text>
  <text x="520" y="290" font-family="Arial" font-size="8" fill="#4b0082">GPIO14-Col2</text>
  <text x="520" y="310" font-family="Arial" font-size="8" fill="#8b00ff">GPIO12-Col3</text>
  <text x="520" y="330" font-family="Arial" font-size="8" fill="#ff00ff">GPIO13-Col4</text>
  
  <!-- LCD Display -->
  <rect x="150" y="100" width="120" height="60" fill="#aaddff" stroke="#333333" stroke-width="2"/>
  <rect x="170" y="120" width="80" height="30" fill="#333333"/>
  <text x="210" y="90" font-family="Arial" font-size="12" text-anchor="middle" fill="black">16x2 LCD (I2C)</text>
  
  <!-- LCD connections -->
  <line x1="350" y1="365" x2="210" y2="160" stroke="#00aaff" stroke-width="2"/> <!-- GPIO21 to SDA -->
  <line x1="450" y1="410" x2="230" y2="160" stroke="#aa00ff" stroke-width="2"/> <!-- GPIO22 to SCL -->
  <line x1="450" y1="260" x2="190" y2="160" stroke="red" stroke-width="2"/> <!-- 5V to VCC -->
  <line x1="350" y1="275" x2="170" y2="160" stroke="black" stroke-width="2"/> <!-- GND to GND -->
  
  <!-- Labels for LCD connections -->
  <text x="280" y="180" font-family="Arial" font-size="8" fill="#00aaff">GPIO21-SDA</text>
  <text x="300" y="200" font-family="Arial" font-size="8" fill="#aa00ff">GPIO22-SCL</text>
  <text x="250" y="160" font-family="Arial" font-size="8" fill="red">5V-VCC</text>
  <text x="250" y="140" font-family="Arial" font-size="8" fill="black">GND-GND</text>
  
  <!-- Sensors -->
  <rect x="100" y="250" width="60" height="30" fill="#aaffaa" stroke="#333333" stroke-width="2"/>
  <text x="130" y="270" font-family="Arial" font-size="10" text-anchor="middle" fill="black">Sensor 1</text>
  
  <rect x="100" y="300" width="60" height="30" fill="#aaffaa" stroke="#333333" stroke-width="2"/>
  <text x="130" y="320" font-family="Arial" font-size="10" text-anchor="middle" fill="black">Sensor 2</text>
  
  <rect x="100" y="350" width="60" height="30" fill="#aaffaa" stroke="#333333" stroke-width="2"/>
  <text x="130" y="370" font-family="Arial" font-size="10" text-anchor="middle" fill="black">Sensor 3</text>
  
  <rect x="100" y="400" width="60" height="30" fill="#aaffaa" stroke="#333333" stroke-width="2"/>
  <text x="130" y="420" font-family="Arial" font-size="10" text-anchor="middle" fill="black">Sensor 4</text>
  
  <!-- Sensor connections -->
  <line x1="160" y1="265" x2="350" y2="380" stroke="#00cc00" stroke-width="2"/> <!-- Sensor1 to GPIO36 -->
  <line x1="160" y1="315" x2="350" y2="395" stroke="#00aa00" stroke-width="2"/> <!-- Sensor2 to GPIO39 -->
  <line x1="160" y1="365" x2="350" y2="410" stroke="#008800" stroke-width="2"/> <!-- Sensor3 to GPIO34 -->
  <line x1="160" y1="415" x2="350" y2="425" stroke="#006600" stroke-width="2"/> <!-- Sensor4 to GPIO35 -->
  
  <!-- Labels for sensor connections -->
  <text x="220" y="320" font-family="Arial" font-size="8" fill="#00cc00">GPIO36-Sensor1</text>
  <text x="220" y="340" font-family="Arial" font-size="8" fill="#00aa00">GPIO39-Sensor2</text>
  <text x="220" y="360" font-family="Arial" font-size="8" fill="#008800">GPIO34-Sensor3</text>
  <text x="220" y="380" font-family="Arial" font-size="8" fill="#006600">GPIO35-Sensor4</text>
  
  <!-- Pull-up resistors for sensors (simplified) -->
  <line x1="190" y1="265" x2="210" y2="265" stroke="#777777" stroke-width="2"/>
  <rect x="210" y="260" width="20" height="10" fill="#aa7722" stroke="#333333" stroke-width="1"/>
  <line x1="230" y1="265" x2="250" y2="265" stroke="#777777" stroke-width="2"/>
  <line x1="250" y1="265" x2="250" y2="240" stroke="#777777" stroke-width="2"/>
  <line x1="250" y1="240" x2="350" y2="240" stroke="#777777" stroke-width="2"/>
  <line x1="350" y1="240" x2="350" y2="260" stroke="#777777" stroke-width="2"/>
  <text x="230" y="255" font-family="Arial" font-size="6" fill="black">10kÎ©</text>
  
  <!-- Similar for other sensors (simplified indication) -->
  <text x="230" y="300" font-family="Arial" font-size="6" fill="black">Pull-up</text>
  <text x="230" y="350" font-family="Arial" font-size="6" fill="black">Pull-up</text>
  <text x="230" y="400" font-family="Arial" font-size="6" fill="black">Pull-up</text>
  
  <!-- Panic Button -->
  <circle cx="150" y="500" r="20" fill="#ff0000" stroke="#333333" stroke-width="2"/>
  <text x="150" y="505" font-family="Arial" font-size="8" text-anchor="middle" fill="white">PANIC</text>
  
  <!-- Panic Button connection -->
  <line x1="150" y1="480" x2="350" y2="350" stroke="#990000" stroke-width="2"/> <!-- Panic to GPIO19 -->
  
  <!-- Label for panic button connection -->
  <text x="230" y="450" font-family="Arial" font-size="8" fill="#990000">GPIO19-PANIC</text>
  
  <!-- Pull-up for panic button (simplified) -->
  <text x="180" y="470" font-family="Arial" font-size="6" fill="black">Pull-up</text>
  
  <!-- Buzzer -->
  <circle cx="600" y="450" r="20" fill="#dddddd" stroke="#333333" stroke-width="2"/>
  <circle cx="600" y="450" r="15" fill="#aaaaaa" stroke="#333333" stroke-width="1"/>
  <circle cx="600" y="450" r="10" fill="#888888" stroke="#333333" stroke-width="1"/>
  <text x="600" y="485" font-family="Arial" font-size="10" text-anchor="middle" fill="black">Buzzer</text>
  
  <!-- Buzzer connection -->
  <line x1="350" y1="335" x2="585" y2="450" stroke="#555555" stroke-width="2"/> <!-- GPIO5 to Buzzer -->
  <line x1="600" y1="470" x2="600" y2="490" stroke="black" stroke-width="2"/> <!-- Buzzer to GND -->
  <line x1="600" y1="490" x2="400" y2="490" stroke="black" stroke-width="2"/> <!-- Buzzer GND route -->
  <line x1="400" y1="490" x2="400" y2="430" stroke="black" stroke-width="2"/> <!-- Buzzer GND route -->
  <line x1="400" y1="430" x2="350" y2="430" stroke="black" stroke-width="2"/> <!-- Buzzer GND route -->
  
  <!-- Label for buzzer connection -->
  <text x="450" y="450" font-family="Arial" font-size="8" fill="#555555">GPIO5-Buzzer</text>
  <text x="450" y="470" font-family="Arial" font-size="8" fill="black">GND</text>
</svg>